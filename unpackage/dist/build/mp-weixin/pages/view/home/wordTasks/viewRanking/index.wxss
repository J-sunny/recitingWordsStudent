.rankingBox {
  position: relative;
  overflow: hidden;
}
.rankingBox .headBox {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 326rpx;
}
.rankingBox .headBox .site-img {
      width: 100%;
      position: absolute;
      left: 0;
      top: 0;
      height: 326rpx;
      z-index: 10;
      background-color: #23C492;
}
.rankingBox .headBox .arrow {
      position: fixed;
      left: 40rpx;
      top: 73rpx;
      display: -webkit-box;
      display: -webkit-flex;
      display: -ms-flexbox;
      display: flex;
      width: 20rpx;
      height: 20rpx;
      border-left: 4rpx solid #fff;
      border-top: 4rpx solid #fff;
      -webkit-transform: rotate(-45deg);
          -ms-transform: rotate(-45deg);
              transform: rotate(-45deg);
      z-index: 20;
}
.rankingBox .headBox .title {
      width: 100%;
      text-align: center;
      position: absolute;
      left: 0;
      top: 60rpx;
      font-size: 36rpx;
      font-weight: 800;
      color: white;
      opacity: 1;
      z-index: 15;
}
.rankingBox .headBox .wordNum {
      position: fixed;
      top: 160rpx;
      z-index: 30;
      padding: 0 50rpx;
      -webkit-box-sizing: border-box;
              box-sizing: border-box;
      width: 100%;
      color: #fff;
      text-align: center;
}
.rankingBox .headBox .wordNum .lines {
        border-right: 2rpx solid #FFFFFF;
}
.rankingBox .headBox .wordNum .danCi {
        float: left;
        width: 49%;
}
.rankingBox .headBox .wordNum .danCi .danNum {
          font-size: 48rpx;
          font-weight: 500;
}
.rankingBox .headBox .wordNum .danCi .danText {
          font-size: 28rpx;
          font-weight: 500;
}
.rankingBox .conBox {
    margin-top: 326rpx;
}
.rankingBox .conBox .minePh {
      width: 100%;
      height: 112rpx;
      background: white;
      padding: 0rpx 40rpx;
      -webkit-box-sizing: border-box;
              box-sizing: border-box;
      line-height: 112rpx;
      overflow: hidden;
}
.rankingBox .conBox .minePh .mineleft {
        float: left;
}
.rankingBox .conBox .minePh .mineleft .myRanking {
          font-size: 28rpx;
          font-weight: 500;
          color: #979dab;
}
.rankingBox .conBox .minePh .mineleft .xz {
          width: 44rpx;
          height: 46rpx;
          vertical-align: middle;
}
.rankingBox .conBox .minePh .mineleft .myPic {
          width: 64rpx;
          height: 64rpx;
          vertical-align: middle;
          margin-left: 28rpx;
          margin-right: 32rpx;
}
.rankingBox .conBox .minePh .mineleft .myName {
          font-size: 30rpx;
          font-weight: 500;
          color: #23252a;
}
.rankingBox .conBox .minePh .mineRight {
        float: right;
}
.rankingBox .conBox .minePh .mineRight .completionTime {
          font-size: 24rpx;
          font-weight: 500;
          color: #979dab;
          margin-right: 16rpx;
}
.rankingBox .conBox .minePh .mineRight .times {
          font-size: 28rpx;
          font-weight: 500;
          color: #2e3548;
}

