.rankingBox {
  margin: 0;
  padding: 0;
}
.rankingBox .rheadBigBox {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
}
.rankingBox .rheadBigBox .rheadBox {
      position: relative;
}
.rankingBox .rheadBigBox .rheadBox .headImg {
        width: 100%;
        height: 394rpx;
}
.rankingBox .rheadBigBox .rheadBox .rankingTxt {
        position: absolute;
        top: 166rpx;
        left: 58rpx;
        font-size: 56rpx;
        font-family: PingFang SC;
        font-weight: 800;
        color: white;
        opacity: 1;
}
.rankingBox .rheadBigBox .rheadBox .rankingTxt .icon_swit {
          width: 32rpx;
          height: 28rpx;
          margin-left: 16rpx;
}
.rankingBox .rheadBigBox .rheadBox .switchBar {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 80rpx;
        background-color: #23C4A3;
        line-height: 80rpx;
        text-align: center;
        color: #FFFFFF;
        font-size: 30rpx;
        font-family: PingFang SC;
        font-weight: bold;
        color: white;
}
.rankingBox .rheadBigBox .rheadBox .switchBar .navs {
          width: 375rpx;
          float: left;
          position: relative;
}
.rankingBox .rheadBigBox .rheadBox .switchBar .navs .arrows {
            display: block;
            width: 20rpx;
            height: 12rpx;
            position: absolute;
            bottom: 0;
            left: 50%;
            margin-left: -10rpx;
}
.rankingBox .rheadBigBox .rheadBox .switchBar .sortCondition {
          background: #21b899;
}
.rankingBox .rankingConBox {
    margin-top: 394rpx;
    padding-bottom: 100rpx;
}
.rankingBox .rankingConBox .minePh {
      width: 100%;
      height: 112rpx;
      background: white;
      padding: 0rpx 40rpx;
      -webkit-box-sizing: border-box;
              box-sizing: border-box;
      line-height: 112rpx;
      overflow: hidden;
}
.rankingBox .rankingConBox .minePh .mineleft {
        float: left;
}
.rankingBox .rankingConBox .minePh .mineleft .myRanking {
          font-size: 28rpx;
          font-weight: 500;
          color: #979dab;
}
.rankingBox .rankingConBox .minePh .mineleft .xz {
          width: 44rpx;
          height: 46rpx;
          vertical-align: middle;
}
.rankingBox .rankingConBox .minePh .mineleft .myPic {
          width: 64rpx;
          height: 64rpx;
          vertical-align: middle;
          margin-left: 28rpx;
          margin-right: 32rpx;
          background-color: #F1F1F1;
          border-radius: 50%;
}
.rankingBox .rankingConBox .minePh .mineleft .myName {
          font-size: 30rpx;
          font-weight: 500;
          color: #23252a;
}
.rankingBox .rankingConBox .minePh .mineRight {
        float: right;
}
.rankingBox .rankingConBox .minePh .mineRight .ge {
          font-size: 24rpx;
          font-weight: 500;
          color: #979dab;
}
.rankingBox .rankingConBox .minePh .mineRight .wordNum {
          font-size: 28rpx;
          font-weight: 500;
          color: #2e3548;
          margin-right: 16rpx;
}
.rankingBox .rankingConBox .timeListBox {
      width: 100%;
      height: 88rpx;
      background: white;
      opacity: 1;
      position: fixed;
      bottom: 0rpx;
      left: 0;
      padding: 18rpx 0;
      -webkit-box-sizing: border-box;
              box-sizing: border-box;
}
