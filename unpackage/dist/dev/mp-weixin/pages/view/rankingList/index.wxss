        border-radius: 4rpx;
        height: 52rpx;
        font-size: 26rpx;
        font-family: PingFang SC;
        font-weight: 500;
        line-height: 52rpx;
        color: #5C6371;
        opacity: 1;
        text-align: center;
}
.rankingBox .rankingConBox .timeListBox .timelist .list {
          width: 32%;
          display: inline-block;
}
.rankingBox .rankingConBox .timeListBox .timelist .dayList {
          border: 2rpx solid #b4bbcc;
          opacity: 1;
          border-radius: 4rpx 0rpx 0rpx 4rpx;
}
.rankingBox .rankingConBox .timeListBox .timelist .weekList {
          border-top: 2rpx solid #b4bbcc;
          border-bottom: 2rpx solid #b4bbcc;
          opacity: 1;
}
.rankingBox .rankingConBox .timeListBox .timelist .mouthList {
          border: 2rpx solid #b4bbcc;
          opacity: 1;
          border-radius: 0rpx 4rpx 4rpx 0rpx;
}
