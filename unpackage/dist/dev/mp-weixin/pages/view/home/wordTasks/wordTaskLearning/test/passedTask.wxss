.passedBox .passedConBox {
  margin-top: 248rpx;
}
.passedBox .passedConBox .passedWords {
    text-align: center;
}
.passedBox .passedConBox .passedWords .orangeColor {
      font-size: 72rpx;
      font-family: SF Pro Display;
      font-weight: bold;
      color: #fd9023;
      opacity: 1;
}
.passedBox .passedConBox .passedWords .word {
      font-size: 36rpx;
      font-family: PingFang SC;
      font-weight: bold;
      color: #2e3548;
      opacity: 1;
      margin-left: 10rpx;
}
.passedBox .passedConBox .passedTask {
    font-size: 36rpx;
    font-family: PingFang SC;
    font-weight: bold;
    color: #2e3548;
    opacity: 1;
    text-align: center;
    margin-top: 40rpx;
}
.passedBox .passedConBox .useTime {
    font-size: 28rpx;
    font-family: PingFang SC;
    font-weight: 500;
    color: #5c6371;
    opacity: 1;
    text-align: center;
    margin-top: 24rpx;
}
.passedBox .passedConBox .viewRanking {
    width: 440rpx;
    height: 80rpx;
    background: -webkit-gradient(linear, left top, right top, from(#0fc4b7), to(#3fd2b1));
    background: -o-linear-gradient(left, #0fc4b7 0%, #3fd2b1 100%);
    background: linear-gradient(90deg, #0fc4b7 0%, #3fd2b1 100%);
    opacity: 1;
    border-radius: 40rpx;
    margin: 96rpx auto 32rpx;
    font-size: 28rpx;
    font-family: PingFang SC;
    font-weight: bold;
    line-height: 80rpx;
    color: white;
    opacity: 1;
    text-align: center;
}
.passedBox .passedConBox .back {
    width: 440rpx;
    height: 80rpx;
    background: #f3fffe;
    border: 1px solid #0fc4b7;
    opacity: 1;
    border-radius: 40rpx;
    font-size: 28rpx;
    font-family: PingFang SC;
    font-weight: bold;
    line-height: 80rpx;
    color: #03bfb7;
    opacity: 1;
    margin: 0 auto;
    text-align: center;
}

