<view class="wordTaskLearning"><view class="headBox"><view class="headTitle">单词任务学习</view><van-icon class="headArrow" vue-id="1" name="arrow-left" data-event-opts="{{[['^tap',[['goBack']]]]}}" data-com-type="wx" bind:tap="__e" bind:__l="__l"></van-icon></view><view class="TaskLearningBox"><view class="progressBox"><van-progress vue-id="2" show-pivot="{{false}}" color="#FD9023" percentage="{{percentage}}" data-com-type="wx" bind:__l="__l"></van-progress><view class="progressTxtBox"><label class="progressTxt">{{index+1+"/"+wordIdList.length}}</label><van-icon class="{{[questionList.collectionStatus==1?'start':'start-o']}}" vue-id="3" name="{{questionList.collectionStatus==1?'star':'star-o'}}" data-event-opts="{{[['^click',[['saveOrCancelCollectWords',['$0','$1'],['questionList.wordId','questionList.collectionStatus']]]]]}}" data-com-type="wx" bind:click="__e" bind:__l="__l"></van-icon></view></view><view class="wordsBox"><view class="word">{{questionList.wordSpell}}</view><view data-event-opts="{{[['tap',[['playAudio',['$event']]]]]}}" class="playWord" bindtap="__e"><van-icon class="volume-o" vue-id="4" name="volume-o" data-com-type="wx" bind:__l="__l"></van-icon><label class="phonetic">{{questionList.phoneticSymbol+''}}</label></view></view><view class="interpretation"><view class="title">释义</view><block wx:for="{{interpretation}}" wx:for-item="item" wx:for-index="__i0__" wx:key="*this"><view class="nadjBox"><label class="noun">{{item}}</label><block wx:if="{{false}}"><label>组成部分；成分；组件，元件</label></block></view></block></view><view class="exampleSentenceBox"><view class="title">例句</view><block wx:for="{{exampleArr}}" wx:for-item="item" wx:for-index="index" wx:key="*this"><view class="exampleSentence"><view class="inEnglish">{{index+1+"."+item[0]}}</view><view class="inChinese">{{item[1]}}</view></view></block></view><view class="nextBigBox"><view data-event-opts="{{[['tap',[['nextQuestion']]]]}}" class="nextBox" bindtap="__e"><van-icon class="arrow" vue-id="5" name="arrow" data-com-type="wx" bind:__l="__l"></van-icon><label class="nextTxt">下一个</label></view></view></view><view class="completeBox"><van-popup vue-id="6" show="{{show}}" data-event-opts="{{[['^close',[['onClose']]]]}}" data-com-type="wx" bind:close="__e" bind:__l="__l" vue-slots="{{['default']}}"><view class="completeConBox"><view class="top"><image class="coverPic" src="../../../../../../static/images/icon_test@2x.png"></image><view class="right"><view class="taskNum">任务<label class="num">{{wordIdList.length}}</label>词</view><view class="complete">学习已完成</view></view></view><view data-event-opts="{{[['tap',[['linkTo']]]]}}" class="startTask" bindtap="__e">开始测试</view></view></van-popup></view></view>