page {
  background: -webkit-gradient(linear, left bottom, left top, from(#ebf5f4), to(white));
  background: -o-linear-gradient(bottom, #ebf5f4 0%, white 100%);
  background: linear-gradient(0deg, #ebf5f4 0%, white 100%);
}
.headBox {
  width: 100%;
  height: 128rpx;
  background: white;
  text-align: center;
  border-bottom: 1px solid #F0F0F0;
  overflow: hidden;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
}
.headBox .headTitle {
    font-size: 36rpx;
    font-family: PingFang SC;
    font-weight: 800;
    line-height: 25px;
    color: #23252a;
    margin-top: 58rpx;
}
.headBox .headArrow {
    font-size: 36rpx;
    position: fixed;
    top: 68rpx;
    left: 30rpx;
}
.optionBox {
  width: 100%;
  padding: 0 40rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  margin-top: 80rpx;
  overflow: hidden;
}
.optionBox .option {
    width: 100%;
    height: 120rpx;
    background: #f5f6f7;
    opacity: 1;
    border-radius: 10rpx;
    padding-left: 40rpx;
    -webkit-box-sizing: border-box;
            box-sizing: border-box;
    font-size: 28rpx;
    font-family: PingFang SC;
    font-weight: bold;
    line-height: 120rpx;
    color: #2e3548;
    margin-top: 24rpx;
}
.optionBox .green {
    background: #f5fffe;
    color: #2ED19F;
    border: 2rpx solid #2ED19F;
}
.optionBox .red {
    background: #fff8f8;
    color: #EE5858;
    border: 2rpx solid #ff7a7a;
}
